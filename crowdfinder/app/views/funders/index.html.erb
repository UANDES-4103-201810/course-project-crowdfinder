<div class="container-fluid">
  <h1>Funders</h1>

  <style>
    table {
      border-collapse: collapse;
      width: 30%;
    }

    th {
      height: 50px;
    }
  </style>
  <table>
    <thead>
    <tr>
      <th>Promise</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @funders.each do |funder| %>
      <tr>
        <td><%= Promise.find(funder.promise_id).name %></td>
        <td><%= funder.user_id %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>