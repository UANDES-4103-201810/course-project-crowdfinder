
<div class="jumbotron text-center">
  <h1>Categories</h1>
</div>

<div class="container">
  <style>
    table {
      border-collapse: collapse;
      width: 50%;
    }

    th {
      height: 50px;
    }
  </style>

  <style>
    table {
      border-collapse: collapse;
      width: 100%;
    }

    th {
      height: 50px;
    }
  </style>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><%= link_to 'Show', category, class: "btn btn-default" %></td>
          <td><%= link_to 'Edit', edit_category_path(category), class: "btn btn-success" %></td>
          <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Category', new_category_path , class: "btn btn-default" %>
</div>

