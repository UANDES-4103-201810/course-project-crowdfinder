
<h1>Merches</h1>
<style>
  table {
    border-collapse: collapse;
    width: 100%;
  }

  th {
    height: 50px;
  }
</style>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @merches.each do |merch| %>
      <tr>
        <td><%= merch.name %></td>
        <td><%= merch.description %></td>
        <td><%= link_to 'Show', merch %></td>
        <td><%= link_to 'Destroy', merch, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Merch', new_project_promise_merch_path %>
