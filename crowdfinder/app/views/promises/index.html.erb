<div class="container-fluid">
  <h1>Promises</h1>

  <style>
    table {
      border-collapse: collapse;
      width: 100%;
    }

    th {
      height: 50px;
    }
  </style>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Project</th>
        <th>Merch</th>
        <th>Price</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @promises.each do |promise| %>
        <tr>
          <td><%= promise.name %></td>
          <td><%= promise.project_id %></td>
          <td><%= promise.merch %></td>
          <td><%= promise.price %></td>
          <td><%= link_to 'Show', project_promise_path(@project,promise) %></td>
          <td><%= link_to 'Edit', edit_project_promise_path(@project,promise) %></td>
          <td><%= link_to 'Destroy', project_promise_path(@project,promise), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Promise', new_project_promise_path %>
  <p>
    <strong>Name:</strong>
    <%= @promises.name %>
  </p>
</div>